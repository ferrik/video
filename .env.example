# Antigravity Scheduler Configuration
# Copy this to .env and fill in your values

# ============================================
# SCHEDULER SETTINGS
# ============================================

# Mode: once, scheduled, daemon
ANTIGRAVITY_MODE=scheduled

# Batch size (1-5, or 'adaptive' for agent decision)
ANTIGRAVITY_BATCH_SIZE=3

# Schedule interval (hours between runs)
ANTIGRAVITY_INTERVAL_HOURS=6

# Timezone (e.g., UTC, America/New_York, Europe/London)
ANTIGRAVITY_TIMEZONE=UTC

# Daily video limit (safety)
ANTIGRAVITY_MAX_DAILY_VIDEOS=20

# ============================================
# PLATFORM API KEYS
# ============================================

# TikTok
TIKTOK_API_KEY=your_tiktok_key_here
TIKTOK_API_SECRET=your_tiktok_secret_here

# Instagram
INSTAGRAM_ACCESS_TOKEN=your_instagram_token_here

# YouTube
YOUTUBE_API_KEY=your_youtube_key_here
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# ============================================
# AI/LLM CONFIGURATION
# ============================================

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI (if using for vision/other)
OPENAI_API_KEY=your_openai_key_here

# ============================================
# VIDEO GENERATION APIS
# ============================================

# CapCut
CAPCUT_API_KEY=your_capcut_key_here

# Runway (when you integrate it)
# RUNWAY_API_KEY=your_runway_key_here

# Pika
# PIKA_API_KEY=your_pika_key_here

# ============================================
# STORAGE & MEMORY
# ============================================

# Redis (optional, for distributed scheduling)
# REDIS_URL=redis://localhost:6379

# PostgreSQL (optional, for persistent memory)
# DATABASE_URL=postgresql://user:password@localhost/antigravity

# S3 or Cloud Storage (for video files)
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# S3_BUCKET_NAME=antigravity-videos

# ============================================
# MONITORING & LOGGING
# ============================================

# Sentry (error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ============================================
# DEPLOYMENT
# ============================================

# Railway deployment
# RAILWAY_ENVIRONMENT=production

# Port (if running web dashboard)
PORT=8080

# ============================================
# FEATURE FLAGS
# ============================================

# Enable adaptive batch sizing (let agent decide)
ENABLE_ADAPTIVE_BATCHING=true

# Enable agent veto power
ENABLE_AGENT_VETO=true

# Enable health checks
ENABLE_HEALTH_CHECKS=true

# Enable metrics collection
ENABLE_METRICS=true
